#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/security/amavisd-new/files/pkg-deinstall.in 368225 2014-09-14 20:38:48Z antoine $
#

USER=%%AMAVISUSER%%
GROUP=%%AMAVISGROUP%%
DIR=%%AMAVISDIR%%
QUARANTINE=%%AMAVISQUARANTINE%%

if [ "$2" = "POST-DEINSTALL" ]; then

    if [ -e ${DIR} ]; then
	echo "You should manually remove the \"${DIR}\" directory."
    fi
    
    if [ -e ${QUARANTINE} ]; then
      echo "You should manually remove the \"${QUARANTINE}\" directory."
    fi
fi
