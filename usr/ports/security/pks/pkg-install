#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/security/pks/pkg-install 340719 2014-01-22 15:52:06Z mat $

PKGNAME=$1
STAGE=$2

case ${STAGE} in
PRE-INSTALL)
	;;
POST-INSTALL)
	DBDIR=/var/pks/db
	MAILDIR=/var/pks/incoming

	mkdir -p ${DBDIR} ${MAILDIR}
	;;
*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
