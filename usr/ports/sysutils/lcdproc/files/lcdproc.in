#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/sysutils/lcdproc/files/lcdproc.in 340872 2014-01-24 00:14:07Z mat $
#
# PROVIDE: lcdproc
# REQUIRE: LCDd
#
# DO NOT CHANGE THESE DEFAULT VALUES HERE
# SET THEM IN THE /etc/rc.conf FILE
#

. /etc/rc.subr

name="lcdproc"
rcvar=lcdproc_enable

load_rc_config $name

: ${lcdproc_enable="NO"}
: ${lcdproc_conf="%%PREFIX%%/etc/lcdproc.conf"}
: ${lcdproc_flags="-c ${lcdproc_conf}"}

required_files=${lcdproc_conf}
command="%%PREFIX%%/bin/lcdproc"

run_rc_command "$1"
