#!/bin/sh

#
# $FreeBSD: tags/RELEASE_10_3_0/sysutils/pfstat/files/pfstatd.in 340872 2014-01-24 00:14:07Z mat $
#

# PROVIDE: pfstatd
# REQUIRE: DAEMON
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable pfstatd:
# pfstatd_enable (bool):      Set to "NO" by default.
#                             Set it to "YES" to enable pfstatd
. /etc/rc.subr

name="pfstatd"
rcvar=pfstatd_enable
command="%%PREFIX%%/bin/${name}"

load_rc_config ${name}
run_rc_command "$1"
