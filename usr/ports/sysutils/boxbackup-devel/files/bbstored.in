#!/bin/sh

# $FreeBSD: tags/RELEASE_10_3_0/sysutils/boxbackup-devel/files/bbstored.in 340872 2014-01-24 00:14:07Z mat $
#
# PROVIDE: bbstored
# REQUIRE: NETWORKING
# KEYWORD: shutdown
#
# Add the following line to /etc/rc.conf to enable bbstored:
#
# bbstored_enable="YES"

. /etc/rc.subr

name="bbstored"
rcvar=bbstored_enable

load_rc_config $name

: ${bbstored_enable:="NO"}
: ${bbstored_flags:="%%PREFIX%%/etc/box/bbstored.conf"}

pidfile=${bbstored_pidfile:-"/var/run/bbstored.pid"}

command="%%PREFIX%%/sbin/bbstored"
extra_commands="reload"

run_rc_command "$1"
