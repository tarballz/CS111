#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/sysutils/monitord/files/monitord.in 340872 2014-01-24 00:14:07Z mat $
#
# PROVIDE: monitord
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf to enable monitord:
#
# monitord_enable="YES"
#
# See monitord(8) for flags.
#

. /etc/rc.subr

name="monitord"
rcvar=monitord_enable

load_rc_config $name
: ${monitord_enable="NO"}
: ${monitord_flags="-f %%PREFIX%%/etc/monitord.conf"}

command="%%PREFIX%%/sbin/monitord"
required_files="%%PREFIX%%/etc/monitord.conf"

run_rc_command "$1"
