#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/comms/thebridge/files/tbd.in 340851 2014-01-23 19:55:14Z mat $
#

# PROVIDE: tbd
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable tbd:
#
# tbd_enable="YES"
# tbd_flags="<set as needed>"
#

tbd_enable=${tbd_enable-"NO"}

. /etc/rc.subr

name="tbd"
rcvar=tbd_enable
command="%%PREFIX%%/libexec/tbd"

load_rc_config $name
run_rc_command "$1"
