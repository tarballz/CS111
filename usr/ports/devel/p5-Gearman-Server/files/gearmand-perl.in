#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/devel/p5-Gearman-Server/files/gearmand-perl.in 340872 2014-01-24 00:14:07Z mat $
#

# PROVIDE: %%NAME%%
# REQUIRE: DAEMON

# Add the following line to /etc/rc.conf to enable `%%NAME%%':
#
#%%NAME%%_enable="YES"

. /etc/rc.subr

name="%%NAME%%"
rcvar=%%NAME%%_enable

command="%%PREFIX%%/bin/gearmand"
command_interpreter="%%PREFIX%%/bin/perl"
command_args="--daemon"

# read configuration and set defaults
load_rc_config "$name"
: ${%%NAME%%_enable="NO"}

run_rc_command "$1"
