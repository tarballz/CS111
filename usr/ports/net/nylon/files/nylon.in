#!/bin/sh

# $FreeBSD: tags/RELEASE_10_3_0/net/nylon/files/nylon.in 340872 2014-01-24 00:14:07Z mat $
#
# PROVIDE: nylon
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf to enable nylon:
#
#nylon_enable="YES"
#
# See nylon(1) for flags

. /etc/rc.subr

name=nylon
rcvar=nylon_enable

command=%%PREFIX%%/bin/nylon

stop_postcmd=stop_postcmd

stop_postcmd()
{
  rm -f $pidfile
}

# set defaults

nylon_enable=${nylon_enable:-"NO"}
nylon_flags=${nylon_flags:-"-s"}

load_rc_config $name
run_rc_command "$1"
