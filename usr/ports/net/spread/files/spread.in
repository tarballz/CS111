#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/net/spread/files/spread.in 301241 2012-07-20 20:32:20Z ohauer $
#

# PROVIDE: spread
# REQUIRE: LOGIN
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable spread:
#
# spread_enable="YES"
# spread_flags="<set as needed>"
#
# See spread(1) for flags
#

. /etc/rc.subr

name=spread
rcvar=spread_enable

command="%%PREFIX%%/sbin/spread"

pidfile=/var/run/${name}.pid
required_files=%%PREFIX%%/etc/${name}.conf

# set defaults

spread_enable=${spread_enable:-"NO"}

load_rc_config ${name}
run_rc_command "$1"
