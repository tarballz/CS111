#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/net/wizd/files/wizd.in 333588 2013-11-12 16:28:52Z tijl $
#
# PROVIDE: wizd
# REQUIRE: LOGIN cleanvar
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf to enable wizd:
# wizd_enable (bool):		Set it to "YES" to enable wizd.
#				Default is "NO".
# wizd_flags (str):		Flags passed to widz on startup.
#				Default is "".
#

. /etc/rc.subr

name="wizd"
rcvar=wizd_enable

command="%%PREFIX%%/bin/$name"
command_args="-d"
required_files="%%PREFIX%%/etc/$name.conf"

load_rc_config $name

: ${wizd_enable="NO"}

run_rc_command "$1"
