#!/bin/sh
#
# ex:ts=4:sw=4:noet
#-*- mode: makefile; tab-width: 4; -*-
#
# $FreeBSD: tags/RELEASE_10_3_0/mail/spamd/pkg-deinstall 340719 2014-01-22 15:52:06Z mat $

if [ "$2" = "DEINSTALL" ]; then
	FILE="/etc/services"
	echo "===>   Removing spamd entries from ${FILE}"
	sed -i '' \
		-e "/^spamd-sync.*8025/d" \
		-e "/^spamd-cfg.*8026/d" \
		-e "/^spamd.*8025/d" \
		${FILE}
fi
