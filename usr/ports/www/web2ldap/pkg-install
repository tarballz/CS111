#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/www/web2ldap/pkg-install 340719 2014-01-22 15:52:06Z mat $
#

PREFIX=${PKG_PREFIX:-/usr/local}
DATADIR=${PREFIX}/share/web2ldap

MKDIR=/bin/mkdir

case "$2" in
POST-INSTALL)
	${MKDIR} -p ${DATADIR}/var ${DATADIR}/var/log ${DATADIR}/var/run
	if [ -w /var/log ]; then
		${MKDIR} /var/log/web2ldap
	fi
	;;
esac

exit 0
