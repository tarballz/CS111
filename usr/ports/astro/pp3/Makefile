# Created by: ijliao
# $FreeBSD: tags/RELEASE_10_3_0/astro/pp3/Makefile 401965 2015-11-19 20:48:24Z amdmi3 $

PORTNAME=	pp3
PORTVERSION=	1.3.3
PORTREVISION=	6
CATEGORIES=	astro
MASTER_SITES=	SF/${PORTNAME}/PP3/${PORTVERSION}

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Creates celestial charts

LICENSE=	MIT
LICENSE_FILE=	${WRKSRC}/COPYING

USES=		tar:bzip2
USE_TEX=	latex

OPTIONS_DEFINE=	DOCS EXAMPLES

do-build:
	(cd ${WRKSRC} \
		&& ${CXX} ${CXXFLAGS} -DPP3DATA=\"${DATADIR}\" pp3.cc -o pp3)

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/pp3 ${STAGEDIR}${PREFIX}/bin
	@${MKDIR} ${STAGEDIR}${DATADIR}
	${INSTALL_DATA} ${WRKSRC}/*.dat ${STAGEDIR}${DATADIR}

do-install-DOCS-on:
	@${MKDIR} ${STAGEDIR}${DOCSDIR}
	${INSTALL_DATA} ${WRKSRC}/README ${STAGEDIR}${DOCSDIR}
	${INSTALL_DATA} ${WRKSRC}/WHATSNEW ${STAGEDIR}${DOCSDIR}

do-install-EXAMPLES-on:
	@${MKDIR} ${STAGEDIR}${EXAMPLESDIR}
	${INSTALL_DATA} ${WRKSRC}/examples/* ${STAGEDIR}${EXAMPLESDIR}

.include <bsd.port.mk>
