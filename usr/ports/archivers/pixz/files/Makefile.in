PROG=	pixz
SRCS=	pixz.c common.c endian.c cpu.c read.c write.c list.c
MAN=	${PROG}.1

CPPFLAGS+=	-I${LOCALBASE}/include -DPIXZ_VERSION='"1.0.2"'
