#!/bin/sh
# $FreeBSD: tags/RELEASE_10_3_0/japanese/font-shinonome/files/pkg-install.in 396783 2015-09-12 22:26:35Z hrs $

case "$2" in
POST-INSTALL)
	cd %%FONTSDIR%%
	touch fonts.alias
	grep -v -- "-shinonome-" fonts.alias > fonts.alias.tmp
	(cat fonts.alias.tmp; grep -- "-shinonome-" %%FONTSALIAS%%) \
	    > fonts.alias
	rm -f fonts.alias.tmp
	;;
POST-DEINSTALL)
	cd %%FONTSDIR%%
	touch fonts.alias
	grep -v -- "-shinonome-" fonts.alias > fonts.alias.tmp
	if [ -s fonts.alias.tmp ]; then
		mv fonts.alias.tmp fonts.alias
	else
		rm -f fonts.alias.tmp fonts.alias
	fi
	;;
esac
