#!/bin/sh

# $FreeBSD: tags/RELEASE_10_3_0/net-mgmt/rotorouter/files/rotorouter.in 340872 2014-01-24 00:14:07Z mat $
#
# PROVIDE: rotorouter
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following line to /etc/rc.conf[.local] to enable rotorouter:
#
#   rotorouter_enable="YES"
#
# See rotorouter(8) for flags.
#

. /etc/rc.subr

name=rotorouter
rcvar=rotorouter_enable

command=%%PREFIX%%/sbin/${name}
command_args='&'

load_rc_config $name

: ${rotorouter_enable-"NO"}
: ${rotorouter_flags-"-h %%PREFIX%%/etc/rotorouter.conf"}

run_rc_command "$1"
