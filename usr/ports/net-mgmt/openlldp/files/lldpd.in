#!/bin/sh
#
# $FreeBSD: tags/RELEASE_10_3_0/net-mgmt/openlldp/files/lldpd.in 340872 2014-01-24 00:14:07Z mat $
#
# PROVIDE: lldpd
# REQUIRE: NETWORKING
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable lldpd:
#
# lldpd_enable="YES"
#
# You can define flags for lldpd running. See lldpd(8) for details.
#
# Example:
# lldpd_flags="-i em0"

. /etc/rc.subr

name=lldpd
rcvar=lldpd_enable

command=%%PREFIX%%/sbin/$name
command_args=">/dev/null 2>/dev/null &"

# set defaults

lldpd_enable=${lldpd_enable:-"NO"}

load_rc_config $name
run_rc_command "$1"
