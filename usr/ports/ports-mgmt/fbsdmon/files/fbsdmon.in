#!/bin/sh 
#
# $FreeBSD: tags/RELEASE_10_3_0/ports-mgmt/fbsdmon/files/fbsdmon.in 340872 2014-01-24 00:14:07Z mat $
#

# PROVIDE: fbsdmon
# REQUIRE: LOGIN
# KEYWORD: shutdown

# Add the following line to /etc/rc.conf to enable `fbsdmon':
#
# fbsdmon_enable="YES"
#


. /etc/rc.subr

name=fbsdmon
rcvar=fbsdmon_enable

load_rc_config "$name"
: ${fbsdmon_enable="NO"}

command="%%PREFIX%%/sbin/$name"
command_args="-D"

run_rc_command "$1"
